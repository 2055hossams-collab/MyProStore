app.post('/cart/add/:id', async (req, res) => {
    const p = await Product.findById(req.params.id);
    if (!req.session.cart) req.session.cart = [];
    const item = req.session.cart.find(i => i.id == p._id);
    if (item) item.qty++;
    else req.session.cart.push({ id: p._id, name: p.name, price: p.price, img: p.img, qty: 1 });
    res.redirect('back');
});

