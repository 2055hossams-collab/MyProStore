// --- Home & Products ---
app.get('/', async (req, res) => {
    const { search, sort, min, max } = req.query;
    let query = {};
    let sortOpt = { _id: -1 };

    if (search) query.$or = [{ name: new RegExp(search, 'i') }, { category: new RegExp(search, 'i') }];
    if (min || max) {
        query.price = {};
        if (min) query.price.$gte = Number(min);
        if (max) query.price.$lte = Number(max);
    }
    
    if (sort === 'price_asc') sortOpt = { price: 1 };
    if (sort === 'price_desc') sortOpt = { price: -1 };
    if (sort === 'top') sortOpt = { rating_avg: -1 };

    const products = await Product.find(query).sort(sortOpt);
    res.render('index', { products, search, sort, min, max });
});

app.get('/product/:id', async (req, res) => {
    try {
        const product = await Product.findById(req.params.id);
        const similar = await Product.find({ category: product.category, _id: { $ne: product._id } }).limit(4);
        res.render('product', { product, similar });
    } catch { res.status(404).send('Product Not Found'); }
});

app.post('/review/:id', async (req, res) => {
    if (!req.session.user) return res.redirect('/login');
    const p = await Product.findById(req.params.id);
    p.reviews.push({ user: req.session.user.username, rating: req.body.rating, comment: req.body.comment });
    p.review_count = p.reviews.length;
    p.rating_avg = p.reviews.reduce((a, b) => a + b.rating, 0) / p.reviews.length;
    await p.save();
    res.redirect('back');
});

