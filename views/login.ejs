<%- include('partials/header', {title: title, pageName: pageName}) %>

<div class="container d-flex justify-content-center align-items-center" style="min-height: 80vh; padding-top: 2rem; padding-bottom: 2rem;">
    <div class="card shadow-lg p-4 rounded-3" style="width: 100%; max-width: 400px;">
        <h2 class="card-title text-center mb-4 text-primary fw-bold">تسجيل الدخول</h2>

        <!-- منطقة عرض رسائل الخطأ -->
        <% if (errorMessage) { %>
            <div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
                <%= errorMessage %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="email" class="form-label"><i class="fas fa-envelope me-2"></i> البريد الإلكتروني</label>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label"><i class="fas fa-lock me-2"></i> كلمة المرور</label>
                <input type="password" class="form-control" id="password" name="password" required>
            </div>
            <button type="submit" class="btn btn-primary w-100 mt-2 py-2 fw-bold"><i class="fas fa-sign-in-alt me-2"></i> تسجيل الدخول</button>
        </form>
        
        <p class="text-center mt-4 mb-0">
            <small class="text-muted">ليس لديك حساب؟ <a href="/signup" class="text-decoration-none">سجل الآن</a></small>
        </p>
    </div>
</div>

<%- include('partials/footer') %>
