<%- include('partials/header', {title: title, pageName: pageName}) %>

<!-- 1. قسم البطل (Hero Section) - تصميم جريء -->
<div class="p-5 mb-5 rounded-4 shadow-lg text-white" style="background: linear-gradient(135deg, #007bff, #0056b3);">
    <div class="container-fluid py-5 text-center">
        <h1 class="display-4 fw-bold mb-4">اكتشف مستقبل التسوق هنا!</h1>
        <p class="col-md-8 fs-5 mx-auto opacity-75">
            منتجات عالية الجودة، تصميمات عصرية، وتجربة شراء لا مثيل لها.
        </p>
        <a class="btn btn-light btn-lg mt-4 px-5 fw-bold text-primary shadow-sm" href="/products" role="button">
            <i class="fas fa-tag me-2"></i> تصفح أحدث المنتجات
        </a>
    </div>
</div>

<!-- 2. قسم المنتجات المميزة -->
<h2 class="mb-5 text-center fw-bold text-dark border-bottom pb-3">
    <i class="fas fa-star text-warning me-2"></i> منتجات مختارة بعناية
</h2>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
    <% if (products.length > 0) { %>
        <% products.forEach(product => { %>
            <div class="col">
                <!-- بطاقة المنتج (Product Card) بتصميم نظيف وعصري -->
                <div class="card h-100 shadow-sm border-0 product-card-2026">
                    <!-- الصورة -->
                    <img src="<%= product.imageUrl || 'https://placehold.co/400x300/F5F5F5/333333?text=MyProStore+Product' %>" 
                         class="card-img-top rounded-top-4" 
                         alt="<%= product.title %>" 
                         style="height: 250px; object-fit: cover;">
                    
                    <div class="card-body d-flex flex-column justify-content-between">
                        <div>
                            <h5 class="card-title text-truncate fw-bold text-dark"><%= product.title %></h5>
                            <!-- السعر بتمييز واضح -->
                            <p class="card-text text-success fw-bolder fs-4 my-2"><%= product.price.toFixed(2) %> ر.س</p>
                            <!-- الوصف المختصر مع فحص الخطأ -->
                            <p class="card-text text-muted small">
                                <%= product.description 
                                    ? product.description.substring(0, 70) + '...' 
                                    : 'لا يوجد وصف متاح لهذا المنتج.' 
                                %>
                            </p>
                        </div>
                    </div>
                    
                    <div class="card-footer bg-white border-top-0 p-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <!-- زر الإضافة للعربة -->
                            <form action="/add-to-cart" method="POST" class="d-inline flex-grow-1 me-2">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <button type="submit" class="btn btn-primary w-100 fw-bold shadow-sm">
                                    <i class="fas fa-cart-plus me-1"></i> أضف للعربة
                                </button>
                            </form>
                            <!-- زر المفضلة -->
                            <form action="/add-to-favorites" method="POST" class="d-inline">
                                <input type="hidden" name="productId" value="<%= product._id %>">
                                <button type="submit" class="btn btn-outline-danger shadow-sm" title="أضف للمفضلة">
                                    <i class="far fa-heart"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12 text-center py-5">
            <div class="alert alert-warning border-0 shadow-sm">
                <i class="fas fa-exclamation-circle me-2"></i> لا توجد منتجات متاحة حاليًا لعرضها.
            </div>
        </div>
    <% } %>
</div>

<%- include('partials/footer') %>

