<%# =================================== %>
<%# views/products.ejs %>
<%# =================================== %>
<%- include('partials/header', {title: title, pageName: pageName}) %>

<div class="container my-5">
    <h2 class="mb-4 text-center"><i class="fas fa-box-open me-2"></i> جميع المنتجات المتاحة</h2>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <div class="row">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        
                        <form action="/favorites/add/<%= product._id %>" method="POST" class="position-absolute top-0 end-0 m-2">
                            <button type="submit" class="btn btn-outline-danger btn-sm" title="أضف للمفضلة">
                                <i class="far fa-heart"></i>
                            </button>
                        </form>

                        <img src="<%= product.img || '/img/default-product.png' %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate"><%= product.name %></h5>
                            <p class="card-text text-muted flex-grow-1"><%= product.short_desc ? product.short_desc.substring(0, 50) + '...' : '' %></p>
                            <p class="fw-bold fs-5 text-primary mt-auto"><%= product.price %> ريال</p>
                            
                            <a href="/product/<%= product._id %>" class="btn btn-outline-primary w-100 mt-2">عرض التفاصيل</a>
                            
                            <% if (product.stock > 0) { %>
                                <form action="/cart/add/<%= product._id %>" method="POST" class="mt-2">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-shopping-cart me-1"></i> أضف للعربة
                                    </button>
                                </form>
                            <% } else { %>
                                <button class="btn btn-warning w-100 mt-2" disabled>
                                    نفذت الكمية
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center alert alert-info">
                <p class="lead">عذراً، لا توجد منتجات متوفرة حالياً.</p>
                <a href="/" class="btn btn-primary">العودة للصفحة الرئيسية</a>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
