<%# =================================== %>
<%# views/my-favorites.ejs - (الكود الكامل) %>
<%# =================================== %>
<%- include('partials/header', {title: title, pageName: pageName}) %>

<div class="container my-5">
    <h2 class="mb-4 text-center"><i class="fas fa-heart text-danger me-2"></i> قائمة المفضلة</h2>
    
    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="row">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        
                        <%# زر الحذف من المفضلة (موقع متميز) %>
                        <form action="/favorites/remove/<%= product._id %>" method="POST" class="position-absolute top-0 start-0 m-2">
                            <button type="submit" class="btn btn-danger btn-sm" title="حذف من المفضلة">
                                <i class="fas fa-times"></i>
                            </button>
                        </form>

                        <img src="<%= product.img || '/img/default-product.png' %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-truncate"><%= product.name %></h5>
                            <p class="card-text text-muted flex-grow-1"><%= product.short_desc ? product.short_desc.substring(0, 50) + '...' : '' %></p>
                            <p class="fw-bold fs-5 text-primary mt-auto"><%= product.price %> ريال</p>
                            
                            <a href="/product/<%= product._id %>" class="btn btn-outline-primary w-100 mt-2">عرض التفاصيل</a>
                            <form action="/cart/add/<%= product._id %>" method="POST" class="mt-2">
                                <button type="submit" class="btn btn-success w-100">
                                    <i class="fas fa-shopping-cart me-1"></i> أضف للعربة
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center alert alert-info">
                <p class="lead">لا توجد منتجات في قائمة المفضلة حالياً.</p>
                <a href="/" class="btn btn-primary">ابدأ التسوق</a>
            </div>
        <% } %>
    </div>
</div>

<%- include('partials/footer') %>
