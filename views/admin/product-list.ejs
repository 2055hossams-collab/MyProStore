<%- include('../partials/header', {title: title, pageName: 'admin-products'}) %>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 fw-bold text-dark">إدارة منتجاتك</h1>
        <a href="/admin/add-product" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> إضافة منتج جديد
        </a>
    </div>

    <% if (products.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle shadow-lg bg-white rounded-3">
                <thead class="bg-dark text-white">
                    <tr>
                        <th scope="col" style="width: 5%;">#</th>
                        <th scope="col" style="width: 20%;">العنوان</th>
                        <th scope="col" style="width: 35%;">الوصف (مختصر)</th>
                        <th scope="col" style="width: 15%;">السعر</th>
                        <th scope="col" style="width: 25%;">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product, index) => { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= product.title %></td>
                            <td><%= product.description.substring(0, 70) + '...' %></td>
                            <td class="text-success fw-bold"><%= product.price.toFixed(2) %> ر.س</td>
                            <td>
                                <a href="/admin/edit-product/<%= product._id %>" class="btn btn-sm btn-info me-2 text-white" title="تعديل المنتج">
                                    <i class="fas fa-edit"></i> تعديل
                                </a>
                                
                                <form action="/admin/delete-product" method="POST" class="d-inline">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button type="submit" class="btn btn-sm btn-danger" title="حذف المنتج" 
                                        onclick="return confirm('هل أنت متأكد من حذف المنتج: <%= product.title %>؟');">
                                        <i class="fas fa-trash-alt"></i> حذف
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center py-5 shadow-sm" role="alert">
            <i class="fas fa-box-open fa-3x mb-3 text-info"></i>
            <h4 class="alert-heading">لا توجد منتجات لديك حاليًا!</h4>
            <p class="mb-0">انقر على "إضافة منتج جديد" لبدء بناء متجرك.</p>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
