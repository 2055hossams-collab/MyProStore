<%- include('../partials/header', {title: title, pageName: 'admin_products'}) %>

<div class="container my-5">
    <div class="row">
        
        <div class="col-md-3">
            <%- include('admin-sidebar') %>
        </div>
        
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-boxes me-2"></i> إدارة المنتجات</h2>
                <a href="/admin/products/add" class="btn btn-success"><i class="fas fa-plus me-1"></i> إضافة منتج جديد</a>
            </div>
            
            <% if (products && products.length > 0) { %>
                <div class="card shadow-sm p-0">
                    <table class="table table-hover mb-0 text-center align-middle">
                        <thead class="bg-light">
                            <tr>
                                <th>#ID</th>
                                <th>المنتج</th>
                                <th>السعر</th>
                                <th>المخزون (المحجوز)</th>
                                <th>التقييم</th>
                                <th>العمليات</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td><%= product._id.toString().substring(0, 4) %>...</td>
                                    <td class="text-end d-flex align-items-center">
                                        <img src="<%= product.img || '/img/default-product.png' %>" style="width: 40px; height: 40px; object-fit: cover;" class="ms-2 rounded">
                                        <span class="fw-bold text-truncate"><%= product.name %></span>
                                    </td>
                                    <td><%= product.price.toFixed(2) %> ر.س</td>
                                    <td>
                                        <span class="<%= product.stock === 0 ? 'text-danger fw-bold' : 'text-success' %>">
                                            <%= product.stock %>
                                        </span>
                                        <% if (product.reserved_stock > 0) { %>
                                            (<span class="text-warning" title="المخزون المحجوز للطلبات التي لم تتم معالجتها"><%= product.reserved_stock %></span>)
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="text-warning"><i class="fas fa-star"></i> <%= product.rating_avg.toFixed(1) %></span>
                                    </td>
                                    <td>
                                        <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-info text-white me-2" title="تعديل"><i class="fas fa-edit"></i></a>
                                        <form action="/admin/products/delete/<%= product._id %>" method="POST" class="d-inline" onsubmit="return confirm('هل أنت متأكد من حذف المنتج <%= product.name %>؟')">
                                            <button type="submit" class="btn btn-sm btn-danger" title="حذف"><i class="fas fa-trash-alt"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info text-center mt-3">
                    <i class="fas fa-info-circle me-2"></i> لا توجد منتجات بعد. ابدأ بإضافة منتج جديد.
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
