<%- include('../partials/header', {title: title, pageName: pageName}) %>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>إدارة منتجاتك</h1>
        <a href="/admin/add-product" class="btn btn-primary"><i class="fas fa-plus-circle"></i> إضافة منتج جديد</a>
    </div>

    <% if (products.length > 0) { %>
        <div class="table-responsive">
            <table class="table table-hover align-middle shadow-sm bg-white rounded">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">العنوان</th>
                        <th scope="col">السعر</th>
                        <th scope="col">الوصف (مختصر)</th>
                        <th scope="col">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.title %></td>
                            <td><%= product.price.toFixed(2) %> ر.س</td>
                            <td><%= product.description.substring(0, 50) + '...' %></td>
                            <td>
                                <!-- زر التعديل (لم يتم بناء المسار بعد) -->
                                <a href="/admin/edit-product/<%= product._id %>" class="btn btn-sm btn-info me-2" title="تعديل"><i class="fas fa-edit"></i></a>
                                
                                <!-- زر الحذف -->
                                <form action="/admin/delete-product" method="POST" class="d-inline">
                                    <input type="hidden" name="productId" value="<%= product._id %>">
                                    <button type="submit" class="btn btn-sm btn-danger" title="حذف" onclick="return confirm('هل أنت متأكد من حذف المنتج <%= product.title %>؟');"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-warning text-center" role="alert">
            <h4 class="alert-heading">لا توجد منتجات!</h4>
            <p>انقر على "إضافة منتج جديد" لبدء بناء متجرك.</p>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
