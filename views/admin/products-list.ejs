<%- include('../partials/header', {title: title, pageName: pageName}) %>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>إدارة المنتجات</h1>
        <a href="/admin/add-product" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> إضافة منتج جديد
        </a>
    </div>

    <% if (typeof error !== 'undefined' && error) { %>
        <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>

    <% if (products && products.length > 0) { %>
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>#</th>
                        <th>المنتج</th>
                        <th>السعر (ريال)</th>
                        <th>المخزون</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    <% products.forEach((product, index) => { %>
                        <tr>
                            <td><%= index + 1 %></td>
                            <td>
                                <img src="<%= product.img || '/img/default-product.png' %>" alt="<%= product.name %>" style="width: 50px; height: 50px; object-fit: cover; border-radius: 5px;" class="ms-2">
                                <%= product.name %>
                            </td>
                            <td><%= product.price %></td>
                            <td>
                                <span class="badge bg-<%= product.stock > 0 ? 'success' : 'danger' %>">
                                    <%= product.stock %>
                                </span>
                            </td>
                            <td>
                                <!-- زر التعديل -->
                                <a href="/admin/edit-product/<%= product._id %>" class="btn btn-sm btn-info me-2" title="تعديل">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <!-- زر الحذف (يجب أن يتم باستخدام POST/DELETE) -->
                                <form action="/admin/delete-product/<%= product._id %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger" title="حذف">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center">
            <p class="lead">لا توجد منتجات مسجلة حالياً.</p>
            <a href="/admin/add-product" class="btn btn-primary">ابدأ بإضافة منتج جديد</a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
