<%- include('partials/header') %>
<h2 class="my-4">❤️ قائمة المنتجات المفضلة</h2>

<div class="row">
    <% if (favorites.length === 0) { %>
        <div class="alert alert-info text-center mt-3">
            لم تقم بإضافة أي منتجات إلى قائمتك المفضلة بعد. <a href="/">ابدأ الاستكشاف!</a>
        </div>
    <% } else { %>
        <% favorites.forEach(product => { %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="<%= product.img %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= product.name %></h5>
                        <p class="card-text text-success fw-bold"><%= product.price.toFixed(2) %> ريال</p>
                        
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <a href="/product/<%= product._id %>" class="btn btn-sm btn-primary">عرض المنتج</a>
                            
                            <form action="/favorite/toggle/<%= product._id %>" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-danger" title="إزالة من المفضلة">
                                    <i class="fas fa-heart"></i> إزالة
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } %>
</div>

<%- include('partials/footer') %>
